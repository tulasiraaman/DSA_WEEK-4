class Solution {
    public int absDifference(int[] nums, int k) {
        Arrays.sort(nums);
        int n = nums.length;
        int sum1 = 0, sum2 = 0;
        if (n == 0)
            return 0;

        for (int i = 0; i < k; i++) {
            sum1 += nums[i];
            sum2 += nums[n-1-i];
        }

        return Math.abs(sum1 - sum2);
    }
}Â©leetcode
