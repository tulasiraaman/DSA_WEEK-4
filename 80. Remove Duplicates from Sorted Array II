class Solution {
    public int removeDuplicates(int[] nums) {
        int n = nums.length;
        if(n <= 2) return n;
        int i = 1, j =1, count = 1;
        
        for(j=1;j<n;j++){
            count = (nums[j] == nums[j - 1]) ? count + 1 : 1;
            if(count <= 2){
                nums[i] = nums[j];
                i++;
            }
        }
        return i;
    }
}
