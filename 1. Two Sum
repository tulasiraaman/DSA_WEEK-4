class Solution {
    public int[] twoSum(int[] nums, int target) {
        Map<Integer, Integer> map = new HashMap<>();
       
        for(int i = 0;i < nums.length;i++){
            int currentValue = target - nums[i];

            if(map.containsKey(currentValue)){
                return new int[]{i, map.get(currentValue)};
            }else{
                map.put(nums[i], i);
            }
        }

        return new int[]{-1, -1};
    }
}
